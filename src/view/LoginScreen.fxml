<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginViewController">
   <children>
      <VBox alignment="CENTER" layoutX="11.0" layoutY="6.0" maxWidth="1.7976931348623157E308" prefHeight="243.0" prefWidth="296.0" spacing="16.0">
         <children>
            <TextField fx:id="userNameTxt" onKeyTyped="#onUserNameInputChanged" promptText="Username" />
            <PasswordField fx:id="passwordTxt" onKeyTyped="#onPasswordInputChanged" promptText="Password" />
            <Button fx:id="loginButton" alignment="CENTER" maxWidth="150.0" mnemonicParsing="false" onAction="#loginButtonPressed" prefHeight="24.0" prefWidth="60.0" style="-fx-background-color: #348ceb;" text="Login" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <Label fx:id="errorLabel" text="Username and/or Password is incorrect" textFill="#fc5c5c" visible="false" />
            <Region prefHeight="16.0" prefWidth="280.0" />
            <Label fx:id="locationLabel" text="Label">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets right="16.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
